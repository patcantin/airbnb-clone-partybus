<!-- Carroussel Banner -->
<%= render'shared/banner' %>
<div class="container">
  <%= form_tag(search_page_path, :method => "get",
            class: 'navbar-form navbar-left') do %>
          <div class="input-group">
            <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
            <div class="input-group-btn">
              <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
            </div>
          </div>
        <% end %>
  <div class="show_all">
    <% @buses.each do |bus| %>
      <%= link_to bus do  %>
          <div class="card-trip">
             <% if bus.photo.attached? %>
               <%= cl_image_tag bus.photo.key, crop: :fill %>
              <% end %>
            <div class="card-trip-infos">
              <div>
                <h3><%= bus.name %></h3>
                <%= link_to 'Book me!', new_bus_booking_path(bus), class: "btn btn-sm b-red button" %>
              </div>
              <h2 class="card-trip-pricing"><%= bus.price %>$</h2>
              </div>
              </div>
      <% end %>
    <% end %>
  </div>



    <p class="total"><%= @buses.count %> buses listed</p>

</div>
