<h1>Wagonner's Party</h1>

<div class="show_all">
  <% @buses.each do |bus| %>
    <%= link_to bus do  %>
        <div class="card">
          <h3><%= bus.name %></h3>
              <%= bus.price %>
              <%= bus.description %>
              <%= bus.user_id %>
              <% if bus.photo.attached? %>
                <%= cl_image_tag bus.photo.key, height: 300, width: 400, crop: :fill %>
              <% end %>
              <%= link_to 'Book me!', new_bus_booking_path(bus), class: "btn btn-primary btn-sm" %>
        </div>
    <% end %>
  <% end %>
</div>
