<!-- Banner -->
<%= render'shared/banner' %>
<br>
<div class="container container_index">
  <%= form_tag(search_page_path, :method => "get",
            class: 'navbar-form navbar-left') do %>
          <div class="input-group">
            <%= search_field_tag :search, params[:search], placeholder: "Search your dream bus...", class: "form-control" %>
            <div class="input-group-btn">
              <%= button_tag "", :class => 'btn btn-info fas fa-shuttle-van nav-btn',:name => nil%>
            </div>
          </div>
        <% end %>
        <br>
  <div class="show_all">
    <% @buses.each do |bus| %>
      <%= link_to bus do  %>
          <div class="card-trip">
             <% if bus.photo.attached? %>
               <%= cl_image_tag bus.photo.key, crop: :fill %>
              <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= bus.name %></h2>
                <%= link_to 'Book me!', new_bus_booking_path(bus), class: "button_slide slide_right" %>
              </div>
              <h2 class="card-trip-pricing"><%= bus.price %>$</h2>
              </div>
              </div>
      <% end %>
    <% end %>
  </div>

</div>
