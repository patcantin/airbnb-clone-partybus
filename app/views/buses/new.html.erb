  <div class="container">
    <h1 style="text-align: center;font-family: Roboto Condensed; letter-spacing: 3px; text-transform: uppercase;">Add a new bus</h1>
    <hr>

    <%= simple_form_for @bus do |f| %>
      <%= f.input :name %>
      <%= f.input :capacity %>
      <%= f.input :description %>
      <%= f.input :price %>
       <%= f.association :options, as: :check_boxes %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create", class: "button_slide slide_right" %>
    <% end %>
  </div>
