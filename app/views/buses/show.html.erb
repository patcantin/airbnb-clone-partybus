    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col"><%= @bus.name.capitalize %></th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= cl_image_tag @bus.photo.key, height: 300, width: 400, crop: :fill %></td>
          <td>
            <ul>
              <li><%= @bus.description %></li>
              <li>Capacity: <%= @bus.capacity %> pers.</li>
              <li><%= @bus.price %>$ / per night</li>
              <li><%= link_to 'Book me!', new_bus_booking_path(@bus), class: "btn btn-primary btn-sm" %></li>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

