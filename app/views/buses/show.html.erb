<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"><h2 style="text-align: left;"><%= @bus.name.capitalize %></h2></th>
          <th scope="col"><h3>Description</h3></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="img_broder"><%= cl_image_tag @bus.photo.key, crop: :fill %></td>
          <td>
            <p><%= @bus.description %></p>
            <p>Capacity: <%= @bus.capacity %> pers.</p>
            <p><%= @bus.price %>$ / per night</p>
            <%= link_to 'Book me!', new_bus_booking_path(@bus), class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      </tbody>
    </table>
</div>
