<div class="container">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col"><%= @bus.name.capitalize %></th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if @bus.photo.attached? %>
          <td class="img_broder"><%= cl_image_tag @bus.photo.key, height: 200, width: 300, crop: :fill %></td>
          <% end %>
          <td>
            <p><%= @bus.description %></p>
            <p>Capacity: <%= @bus.capacity %> pers.</p>
            <p><%= @bus.price %>$ / per night</p>
            <%= link_to 'Book me!', new_bus_booking_path(@bus), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      </tbody>
    </table>
</div>

