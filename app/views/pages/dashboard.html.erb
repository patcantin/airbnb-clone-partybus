<h1>Dashboard(<%= current_user.email %>)</h1>
<h2>My reservations: </h2>

<div class="show_all">
  <% @bookings.each do |b| %>
    <div class="card">
      <%= cl_image_tag b.bus.photo.key, height: 300, width: 400, crop: :fill %>
      <p>From: <%= b.start_date.strftime("%B %d, %Y") %></p>
      <p>To: <%= b.end_date.strftime("%B %d, %Y") %></p>
      <% diff = (b.end_date - b.start_date) %>
      <h3><%= (diff / 1.day).round %> Days</h3>
    </div>
  <% end %>
</div>

  <h2>My buses:</h2>
  <div class="show_all">
  <% @buses.each do |bus| %>
        <div class="card-trip">
           <% if bus.photo.attached? %>
             <%= cl_image_tag bus.photo.key, crop: :fill %>
            <% end %>
          <div class="card-trip-infos">
            <div>
        <h3><%= bus.name %></h3>
        <p>Capacity: <%= bus.capacity %></p>
        <p>Description: <%= bus.description %></p>
        <p>Price: <%= bus.price %> $ per/nigth</p>
            </div>
            </div>
    <% end %>
</div
