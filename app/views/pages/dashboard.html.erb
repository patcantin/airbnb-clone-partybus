<div class="container">
  <br>
  <h2 style="text-align: center;text-decoration: underline;">Dashboard <%= current_user.name.upcase %></h2>
  <br>
  <h2>My reservations: </h2>


  <div class="show_all">
    <% @bookings.each do |b| %>
    <%= link_to bus_booking_path(:id, b) do %>
      <div class="card-trip">
         <% if b.bus.photo.attached? %>
            <%= cl_image_tag b.bus.photo.key, crop: :fill %>
         <% end %>
      <div class="card-trip-infos">
      <div>
        <p><%= b.id %></p>
        <h3><%= b.bus.name %></h3>
        <p>From: <%= b.start_date.strftime("%B %d, %Y") %></p>
        <p>To: <%= b.end_date.strftime("%B %d, %Y") %></p>
        <p><% diff = (b.end_date - b.start_date) %></p>
        <p><%= (diff / 1.day).round %> Days</p>
      </div>
    </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <br>
  <hr>
  <br>

  <h2>My buses:</h2>
  <div class="show_all">
  <% @buses.each do |bus| %>
  <%= link_to bus do %>
    <div class="card-trip">
      <% if bus.photo.attached? %>
        <%= cl_image_tag bus.photo.key, crop: :fill %>
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h3><%= bus.name %></h3>
          <p>Capacity: <%= bus.capacity %></p>
          <p>Description: <%= bus.description %></p>
          <p>Price: <%= bus.price %> $ per/nigth</p>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
  </div>

</div>
