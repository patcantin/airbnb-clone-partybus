  <div class="container">


 <div class="row justify-content-md-center show_card">
    <div class="col-md-12 col-lg-6">
      <% if @bus.photo.attached? %>
        <td class="img_card"><%= cl_image_tag @bus.photo.key, crop: :fill %></td>
      <% end %>
    </div>
    <div class="col-md-12 col-lg-6">
      <h1 class="top_h1">Book this bus</h1>
      <h2><%= @bus.name.upcase %></h2>
      <p><%= @bus.description %></p>
      <p>Capacity: <%= @bus.capacity %> pers.</p>
      <p><%= @bus.price %>$ / per night</p>

      <%= simple_form_for [@bus, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit "Confirm" %>
    <% end %>

    </div>

  </div>




</div>
